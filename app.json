{
  "expo": {
    "name": "BitWord",
    "slug": "BitWord",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/8-Signs_KHORLO.svg.png",
    "scheme": "bitword",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "${PRODUCT_NAME} need access to your Camera."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/8-Signs_KHORLO.svg.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.anonymous.BitWord"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/8-Signs_KHORLO.svg.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/8-Signs_KHORLO.svg.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "${PRODUCT_NAME} need access to your Camera.",
          "enableMircophonePermission": true,
          "microphonePermissionText": "${PRODUCT_NAME} need access to your Microphone."
        }
      ],
      
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
